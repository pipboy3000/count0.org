{
  "{{page.category}}": [
    {% for post in page.posts %}
    {
      "title": "{{ post.title }}",
      "url": "{{ post.url }}",
      "date": "{{ post.date | date_to_long_string }}",
      "categories": "{{ post.categories | join: ", " }}",
      "excerpt": "{{ post.content | strip_html |  strip_newlines | xml_escape |truncate: 110 }}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
